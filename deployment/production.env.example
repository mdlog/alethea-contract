# Production Environment Configuration
# Copy this file to .env.production and update with your values

# Linera Network Configuration
CHAIN_ID=your_mainnet_chain_id_here
APP_ID=your_deployed_app_id_here
SENDER_CHAIN_ID=your_sender_chain_id_here

# Service Configuration
SERVICE_URL=http://localhost:8080
API_PORT=3001

# Wallet Configuration
WALLET_PATH=/var/lib/alethea/wallet.json
STORAGE_PATH=rocksdb:/var/lib/alethea/client.db

# Logging
RUST_LOG=info

# CORS (comma-separated origins)
ALLOWED_ORIGINS=https://alethea.network,https://www.alethea.network

# Optional: Database (if using)
# DATABASE_URL=postgresql://user:password@localhost/alethea

# Optional: Redis (if using for caching)
# REDIS_URL=redis://localhost:6379
